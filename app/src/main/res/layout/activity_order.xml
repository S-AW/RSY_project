<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="全部订单"
            android:textColor="@color/white"
            android:textSize="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="—————————————————————————"
            android:textSize="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/cat2"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:src="@drawable/cat2" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cat2"
                android:gravity="center_vertical"
                android:text="小花"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/catid1"
                android:layout_width="168dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/text1"
                android:text="猫咪编号：01"
                android:textColor="#ffffff"
                android:textSize="25sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/cat3"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:src="@drawable/cat3" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cat3"
                android:gravity="center_vertical"
                android:text="小美"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/catid2"
                android:layout_width="168dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/text2"
                android:text="猫咪编号：02"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/cat4"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:src="@drawable/cat4" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cat4"
                android:gravity="center_vertical"
                android:text="小美"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/catid3"
                android:layout_width="168dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/text3"
                android:text="猫咪编号：03"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>