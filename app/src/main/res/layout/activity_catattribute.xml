<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my"
    tools:context="com.example.rsy_project.catAttributeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="199dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/cat2"
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cat2" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/cat2"
                    android:gravity="center_vertical"
                    android:text="小花"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/catid"
                    android:layout_width="168dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/text1"
                    android:text="猫咪编号：01"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

            </RelativeLayout>
        </LinearLayout>

        <com.lwb.radarchart.RadarChartView
            android:id="@+id/radar_chart_view"
            android:layout_width="match_parent"
            android:layout_height="343dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shoopingcart"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_shape"
                android:text="加入购物车" />

            <Button
                android:id="@+id/buynow"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/button_shape"
                android:text="立即购买" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>